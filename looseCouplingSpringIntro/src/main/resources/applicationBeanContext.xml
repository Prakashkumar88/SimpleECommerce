<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="myBean" class="org.example.GreetingServiceDemo" />

    <bean id="EmailNotificationService" class="org.example.loose.EmailNotification" />
    <bean id="SMSNotificationService" class="org.example.loose.SmsNotification" />

    <!-- Property (setter) injection -->
    <bean id="UserServiceEmail" class="org.example.loose.UserService">
        <property name="notificationService" ref="EmailNotificationService" />
    </bean>

    <bean id="UserServiceSMS" class="org.example.loose.UserService">
<!--        <property name="notificationService" ref="SMSNotificationService" />-->
        <constructor-arg ref="SMSNotificationService" />
    </bean>
</beans>
